<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    >

    <ImageView
        android:id="@+id/module_sub_item_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/module_sub_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/module_sub_item_image"
        android:layout_marginTop="5dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/text_black"
        android:textSize="@dimen/module_item_title_size"
        />

    <TextView
        android:id="@+id/module_sub_item_meta_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/module_sub_item_title"
        android:textSize="@dimen/module_item_sub_title_size"
        android:textColor="@color/text_gray"
        />


</RelativeLayout>