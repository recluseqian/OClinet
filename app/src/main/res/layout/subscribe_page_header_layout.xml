<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.youth.banner.Banner
        android:id="@+id/subscribe_top_banner"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/subscribe_banner_video_classes_item"
            style="@style/classes_banner_item_style"
            >

            <ImageView
                style="@style/classes_banner_item_image_style"
                android:src="@drawable/icon_all_class"
                />

            <TextView
                style="@style/classes_banner_item_text_style"
                android:text="视频分类"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/subscribe_banner_all_subscribe_item"
            style="@style/classes_banner_item_style"
            >

            <ImageView
                style="@style/classes_banner_item_image_style"
                android:src="@drawable/icon_all_subscribe"
                />

            <TextView
                style="@style/classes_banner_item_text_style"
                android:text="添加订阅"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/subscribe_banner_my_subscribe_item"
            style="@style/classes_banner_item_style"
            >

            <ImageView
                style="@style/classes_banner_item_image_style"
                android:src="@drawable/icon_my_subscribe_new"
                />

            <TextView
                style="@style/classes_banner_item_text_style"
                android:text="我的订阅"
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>